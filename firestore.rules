rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* =====================
       HELPER FUNCTIONS
    ====================== */

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      // Check if the user has the 'admin' role in their user profile
      return isSignedIn() &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isSafeRoleChange() {
      // Allow if admin, OR if role field not in request, OR (for new docs allow only 'student', for existing docs prevent changes)
      return isAdmin() || 
             !('role' in request.resource.data) || 
             (resource == null && request.resource.data.role == 'student') ||
             (resource != null && request.resource.data.role == resource.data.role);
    }

    function isNotChanging(field) {
      return !(field in request.resource.data &&
               request.resource.data[field] != resource.data[field]);
    }

    /* =====================
       USERS
    ====================== */

    match /users/{userId} {
      // Allow public read for Digital ID verification (QR code scanning)
      allow read: if true;

      // Allow users to create their own profile OR admins to restore/create users
      allow create: if (isOwner(userId) &&
        (!('role' in request.resource.data) || request.resource.data.role != 'admin')) || isAdmin();

      // Allow users to update their own profile (but not escalate to admin)
      // Admins can update any profile
      allow update: if (isOwner(userId) &&
        (!('role' in request.resource.data) || 
         request.resource.data.role != 'admin' ||
         (resource != null && resource.data.role == 'admin'))) ||
        isAdmin();

      allow delete: if isAdmin();
    }

    /* =====================
       BOOKINGS
    ====================== */

    match /bookings/{bookingId} {
      allow read: if isSignedIn() &&
        (bookingId == request.auth.uid || isAdmin());

      allow create: if isSignedIn() &&
        request.resource.data.userId == request.auth.uid;

      allow update: if isAdmin() || (
        isSignedIn() &&
        resource.data.userId == request.auth.uid &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['leaveRequest', 'status'])
      );

      allow delete: if isAdmin() ||
        (bookingId == request.auth.uid &&
         resource.data.status == 'rejected');
    }

    /* =====================
       OUTPASSES
    ====================== */

    match /outpasses/{outpassId} {
      allow read: if isSignedIn() &&
        (resource.data.userId == request.auth.uid || isAdmin());

      allow create: if isSignedIn() &&
        request.resource.data.userId == request.auth.uid;

      allow update: if isAdmin() || (
        isSignedIn() &&
        resource.data.userId == request.auth.uid &&
        isNotChanging('status')
      );

      allow delete: if isAdmin();
    }

    /* =====================
       COMPLAINTS
    ====================== */

    match /complaints/{complaintId} {
      allow read: if isSignedIn() &&
        (resource.data.userId == request.auth.uid || isAdmin());

      allow create: if isSignedIn() &&
        request.resource.data.userId == request.auth.uid;

      allow update: if isAdmin() || (
        isSignedIn() &&
        resource.data.userId == request.auth.uid &&
        isNotChanging('status')
      );

      allow delete: if isAdmin();
    }

    /* =====================
       PUBLIC DATA
    ====================== */

    match /messMenu/{day} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /rooms/{roomId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /notices/{noticeId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /* =====================
       MEAL RATINGS
    ====================== */

    match /mealRatings/{ratingId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() &&
        request.resource.data.userId == request.auth.uid;
    }

    /* =====================
       NOTIFICATIONS - SIMPLIFIED FOR REAL-TIME LISTENERS
    ====================== */

    match /notifications/{notifId} {
      // Allow all signed-in users to read notifications
      // Real-time listeners require simpler rules
      allow read: if isSignedIn();

      // Anyone signed in can create notifications
      allow create: if isSignedIn();

      // Users can update notifications
      allow update: if isSignedIn();

      // Admins can delete all, users can delete their own
      allow delete: if isAdmin() || isSignedIn();
    }

    /* =====================
       GENERAL NOTIFICATIONS (BROADCAST)
    ====================== */

    match /general-notifications/{notificationId} {
      // Everyone can read broadcast notifications
      allow read: if true;
      // Only admins can create/update/delete
      allow write: if isAdmin();
    }

    /* =====================
       METADATA (ID COUNTER)
    ====================== */

    match /metadata/{docId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    /* =====================
       DELETED USERS (ARCHIVE)
    ====================== */

    match /deletedUsers/{docId} {
      // Only admins can access deleted users archive
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    /* =====================
       AUDIT LOGS (IMMUTABLE)
    ====================== */

    match /audit_logs/{logId} {
      allow read: if isAdmin();

      allow create: if isSignedIn() &&
        (request.resource.data.userId == request.auth.uid ||
         request.resource.data.adminId == request.auth.uid);

      allow update, delete: if false;
    }
  }
}